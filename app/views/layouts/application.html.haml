!!!

%html
  %head
    %title BlockBrowser
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    #header
      %h1= link_to "BlockBrowser", root_path
      %h2= "- #{@page_title}"
      #search
        = form_tag(search_path) do
          = text_field_tag :search
          = submit_tag "Search"

    = yield
    #footer
      Network:
      = Bitcoin.instance_eval { @network }
      |
      Blocks:
      = STORE.get_depth
